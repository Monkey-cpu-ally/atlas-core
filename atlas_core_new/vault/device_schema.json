{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Device Schema",
  "description": "Schema for Atlas Core device configurations",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Device name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Semantic version"
    },
    "generation": {
      "type": "string",
      "description": "Device generation (e.g., Gen-1)"
    },
    "environment": {
      "type": "string",
      "description": "Operating environment"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Device capabilities"
    },
    "sensors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {"type": "string"},
          "model": {"type": "string"},
          "range": {"type": "string"}
        }
      },
      "description": "Sensor configurations"
    },
    "safety_rules": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Safety constraints"
    }
  },
  "required": ["name", "version", "generation"]
}
